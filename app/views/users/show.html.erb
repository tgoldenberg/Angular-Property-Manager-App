<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.listings.any? %>
    <h3>Listings (<%= @user.listings.count %>)</h3>
    <ol class="microposts">
      <%= render @models %>
    </ol>
    <%= will_paginate @models %>
    <% end %>
  </div>
</div>
